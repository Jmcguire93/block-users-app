<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the company Engineering Recruitment Exercise App</h1>

    <h2>
      This is the home page for the company Engineering Recruitment Exercise.
      You can log in as the sample administrative user with the email <em>engineering-test@company.com</em> and password <em>company</em>.
    </h2>

  </div>

  <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"),
                        "https://guides.rubyonrails.org/" %>
<% end %>
